@using HomeWork_5_1_2019.Data;
@model Question

<div class="container">

	<div class="row">

		<!-- Blog Post Content Column -->
		<div class="col-lg-8">
			<h1>@Model.Title</h1>

			<!-- Post Content -->
			<p class="lead">@Model.Text</p>

			<hr>

			<!-- Blog Comments -->
			<!-- Comments Form -->
			<div class="well">
				<h4>Answer Question:</h4>
				<form role="form" method="post" action="~/Home/AnswerQuestion">
					<div class="form-group">
						<input type="hidden" name="Questionid" value="@Model.Id" />

						<textarea id="Cmnt" class="form-control" rows="6" name="answer"></textarea>
					</div>
					<button type="submit"class="btn btn-primary">Submit</button>
				</form>
			</div>

			<hr>

			<!-- Comment -->
			@foreach (Answer a in Model.Answers)
			{
				<div class="media">
					<div class="media-body">
						<h4 class="media-heading">
							<small>@a.answer</small>
						</h4>
					</div>
				</div>
			}

		</div>

	</div>
</div>

